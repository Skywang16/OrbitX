{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/2.0.0/tooling/cli/schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "/Users/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$APPLOCALDATA/**" }
      ]
    },
    "core:event:default",
    "core:event:allow-emit",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "deep-link:default"
  ]
}
