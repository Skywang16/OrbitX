{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OrbitX",
  "version": "0.1.0",
  "identifier": "com.orbitx.terminal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1024,
        "height": 768,
        "minWidth": 640,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": true,
        "visible": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "open",
          "cmd": "open",
          "args": true
        }
      ]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "deep-link": {
      "desktop": {
        "schemes": ["orbitx"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.ico"],
    "resources": ["../config/themes/*", "../config/config.toml", "sql/*"],
    "fileAssociations": [
      {
        "ext": ["*"],
        "description": "Open with OrbitX",
        "role": "Editor"
      }
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "tsp": false,
      "wix": {
        "language": "en-US",
        "template": null
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English"],
        "template": null
      }
    }
  }
}
